<%- model_class = Initiative -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @initiative.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:priority) %>:</strong></dt>
  <dd><%= @initiative.priority %></dd>
  <dt><strong><%= model_class.human_attribute_name(:business_area_id) %>:</strong></dt>
  <dd><%= @initiative.business_area.name %></dd>
</dl>

<% if @initiative.projects.size > 0 %>
<table class="table table-striped">
  <thead>
    <tr>
				<th> </th>
				<th>Ref Number</th>
				<th>Project</th>
        <th># of Impacted Applications
		</tr>
  <thead>
		<tbody>
      <%= render partial: "projects/project", collection: @initiative.projects %>
		</tbody>
	</table>
<% else %>
	<p>No applications identified</p>
<% end %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              initiatives_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_initiative_path(@initiative), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              initiative_path(@initiative),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
