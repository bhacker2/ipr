<%- model_class = Project -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:ipr_num) %>:</strong></dt>
  <dd><%= @project.ipr_num %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ref_num) %>:</strong></dt>
  <dd><%= @project.ref_num %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_name) %>:</strong></dt>
  <dd><%= @project.project_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:initiative) %>:</strong></dt>
  <dd><%= @project.initiative.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:submit_date) %>:</strong></dt>
  <dd><%= @project.submit_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_update_date) %>:</strong></dt>
  <dd><%= @project.last_update_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:step_id) %>:</strong></dt>
  <dd><%= @project.step_id %></dd>
</dl>
<h4>Impacted Applications
</h4>
  <% if @project.impacted_applications.size > 0 %>
<table class="table table-striped">
  <thead>
    <tr>
				<th>Application</th>
				<th>Business Area</th>
		</tr>
  <thead>
		<tbody>
      <%= render partial: "impacted_applications/impacted_application", collection: @project.impacted_applications %>
		</tbody>
	</table>
<% else %>
	<p>No applications identified</p>
<% end %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              projects_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_project_path(@project), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              project_path(@project),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
