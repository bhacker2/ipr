<%- model_class = ImpactedApplication -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:project_id) %>:</strong></dt>
  <dd><%= @impacted_application.project.project_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:application_id) %>:</strong></dt>
  <dd><%= @impacted_application.application.short_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              impacted_applications_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_impacted_application_path(@impacted_application), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              impacted_application_path(@impacted_application),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
